{
  "name": "react19-starter",
  "version": "1.0.0",
  "description": "react19 starter with ssr",
  "type": "module",
  "scripts": {
    "dev": "tsx --env-file=.env server.dev",
    "start": "tsx --env-file=.env server.prod",
    "check": "tsc --noEmit",
    "build": "tsc --noEmit && npm run build:all",
    "build:all": "npm run build:client && npm run build:server",
    "build:client": "vite build --mode production --ssrManifest --outDir dist/client",
    "build:server": "vite build --mode production --ssr src/entry/server.tsx --outDir dist/server -c vite.server.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,mdx}\" --cache",
    "lint": "eslint . --cache"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@trpc/client": "npm:@trpc/client@next",
    "@trpc/react-query": "npm:@trpc/react-query@next",
    "@trpc/server": "npm:@trpc/server@next",
    "clsx": "^2.1.1",
    "express": "^4.21.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.28.1",
    "tsx": "^4.19.2",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@headlessui/tailwindcss": "^0.2.1",
    "@tailwindcss/forms": "^0.5.10",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.6",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "babel-plugin-react-compiler": "19.0.0-beta-e552027-20250112",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-compiler": "19.0.0-beta-e552027-20250112",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^5.4.11"
  }
}
